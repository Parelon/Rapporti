@model ChangeNomeViewModel
@{
    ViewData["Title"] = "ChangeNome";
}

<h2>ChangeNome</h2>

<form asp-controller="Manage" asp-action="ChangeNome" method="post" class="form-horizontal">
    <hr />
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="OldName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="OldName" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label asp-for="NewName" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="NewName" class="form-control" />
            <span asp-validation-for="NewName" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-default">Cambia Nome</button>
        </div>
    </div>
</form>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
