@model List<Rapporti.Models.Assegnazione>

@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Sei sicuro di voler eliminare l'assegnazione dell'utente a tutti questi gruppi?</h3>
<div>
    <hr/>
    <input type="hidden" name="id" value="@ViewData["UtenteId"]" />
    <span>L'utente selezionato fa parte dei seguenti gruppi: </span>
    <ul>
        @foreach(var item in Model)
        {
            <li>@item.Gruppo.Nome</li>
        }
    </ul>
    
    <form asp-action="Delete">
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            <a asp-action="Index">Back to List</a>
        </div>
    </form>
</div>
