@model IEnumerable<Rapporti.Models.AssegnazioniViewModels.IndexAssegnazioneViewModel>

@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Utente
            </th>
            <th>
                Gruppi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(u => item.UserName)
                </td>
                <td>
                    @{
                        string gruppi = "";
                        foreach (var gruppo in item.Gruppi)
                        {
                            gruppi += gruppo + " ";
                        }
                        gruppi = gruppi.Trim();
                    }
                    @gruppi
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
                        }
    </tbody>
</table>
